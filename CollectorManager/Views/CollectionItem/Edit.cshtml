@model CollectionItemModel
@{
    ViewData["Title"] = $"Editar Item da Coleção - {Model.Name}";
}

<div class="container mb-5">
    <h1>Editar Item da Coleção</h1>
    <form asp-controller="CollectionItem" asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="CollectionId"/>
        <div class="row mb-3">
            <div class="form-group mb-2 w-50">
                <label asp-for="Name">Nome</label>
                <input class="form-control" asp-for="Name" placeholder="Nome">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group mb-2 w-50">
                <label asp-for="AuthorsIds">Autores</label>
                <select multiple class="js-select2" data-live-search="true" asp-for="AuthorsIds" asp-items="@ViewBag.Authors"></select>
                <span asp-validation-for="AuthorsIds"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="form-group mb-2 w-50">
                <label asp-for="Quantity">Quantidade</label>
                <input class="form-control" asp-for="Quantity" placeholder="Quantidade">
                <span asp-validation-for="Quantity"></span>
            </div>
            <div class="form-group mb-2 w-50">
                <label asp-for="FormatId">Formato</label>
                <select class="form-select" asp-for="FormatId" asp-items="@ViewBag.Formats"></select>
                <span asp-validation-for="FormatId"></span>
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a asp-action="Index" asp-controller="CollectionItem" asp-route-collectionId="@Model.CollectionId" class="btn btn-secondary">Voltar</a>
            </div>
        </div>
    </form>
</div>

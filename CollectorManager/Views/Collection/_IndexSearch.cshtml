@model CollectionPageableSearchModel

<div class="container mb-5">
    <form asp-controller="Collection" asp-action="Index" method="get">
        <div class="row mb-3">
            <div class="form-group mb-2 w-50">
                <label asp-for="Name">Nome</label>
                <input class="form-control" asp-for="Name" placeholder="Nome">
            </div>
            <div class="form-group mb-2 w-50">
                <label asp-for="Type">Tipo</label>
                <select class="form-select" asp-for="Type" asp-items="@ViewBag.Types"></select>
            </div>
        </div>

        <div class="row">
            <div class="col text-center">
                <button type="submit" class="btn btn-primary">Pesquisar</button>
                <a asp-action="Create" asp-controller="Collection" class="btn btn-secondary">Cadastrar</a>
            </div>
        </div>
    </form>
</div>

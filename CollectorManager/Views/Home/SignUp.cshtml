@model SignUpRequest

@{
    ViewData["Title"] = "Cadastro";
}

<div class="mt-5 text-center d-flex justify-content-lg-center">
    <form asp-controller="Home" asp-action="SignUp" method="post">
        <div class="form-group mb-2">
            <label asp-for="Name">Nome</label>
            <input class="form-control" asp-for="Name" placeholder="Nome">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="UserName">Usuário</label>
            <input class="form-control" asp-for="UserName" placeholder="Usuário">
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Password">Senha</label>
            <input type="password" class="form-control" asp-for="Password" placeholder="Senha">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="ConfirmPassword">Confirme a Senha</label>
            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirme a Senha">
            <span asp-validation-for="ConfirmPassword"></span>
        </div>

        <button type="submit" class="btn btn-primary">Cadastrar</button>
        <a asp-controller="Home" asp-action="Login" class="btn">Voltar</a>
    </form>
</div>